<infinispan
	xsi:schemaLocation="urn:infinispan:config:6.0 http://www.infinispan.org/schemas/infinispan-config-6.0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="urn:infinispan:config:6.0">
	<!-- <infinispan> -->
	<global>
		<transport clusterName="testCluster">
			<properties>
				<property name="configurationFile" value="jgroups-udp-cfg.xml" />
			</properties>
		</transport>
	</global>
	<default>
		<!-- Configure a synchronous replication cache -->
		<clustering mode="replication">
			<sync />
		</clustering>
	</default>

	<namedCache name="distributed-cache">
		<clustering mode="distribution">
			<sync />
			<hash numOwners="3"
					numSegments="20" />
			<stateTransfer chunkSize="0"
				fetchInMemoryState="true"
				timeout="240000" />
		</clustering>
		<unsafe unreliableReturnValues="true" />
	</namedCache>
	<namedCache name="replication-cache">
		<clustering mode="replication">
			<stateTransfer chunkSize="0" fetchInMemoryState="true"
				timeout="240000" />
			<sync />
		</clustering>
	</namedCache>
</infinispan>